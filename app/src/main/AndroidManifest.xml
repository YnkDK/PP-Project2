<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="dk.au.pp13.positionfinder" >

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".PeriodicActivity"
            android:label="@string/title_activity_periodic" >
        </activity>
        <activity
            android:name=".DistanceNaiveActivity"
            android:label="@string/title_activity_distance_naive" >
        </activity>
        <activity
            android:name=".DistanceMaxSpeedActivity"
            android:label="@string/title_activity_distance_max_speed" >
        </activity>
        <activity
            android:name=".DistanceAccelerometerActivity"
            android:label="@string/title_activity_distance_accelerometer" >
        </activity>
    </application>

</manifest>
